{
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  },

  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script"
  },

  "extends": "eslint:recommended",
  "rules": {
    "strict": [2, "global"],
    "semi": [2, "always"],
    "no-var": 2,
    "one-var": [2, "never"],
    "indent": ["error", 2]
  }
}
