{
  "env": {
    "es6": true,
    "node": false,
    "mocha": false,
    "browser": true,
    "commonjs": true
  },

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "plugins": [
    "react"
  ],

  "extends": [
    "../../.eslintrc",
    "plugin:react/recommended"
  ],

  "globals": {
    "$": true,
    "__dirname": true,
    "Gauge": true
  },

  "rules": {
    // Don't enforce let/const for browser and console is okay.
    "no-var": 0,
    "no-console": 0,

    // This makes us define all prop types. IDK about thatâ€¦
    "react/prop-types": 0,

    // Chrome and React extension are capable of figuring this out on their own.
    "react/display-name": 0,

    // Make it warnings, until we decide to upgrade to React 16
    "react/no-string-refs": 1,
    "react/no-deprecated": 1
  }
}
