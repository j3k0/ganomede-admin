{
  "env": {
    "es6": false,
    "node": false,
    "mocha": false,
    "browser": true,
    "commonjs": true
  },

  "parserOptions": {
    "ecmaVersion": 5,
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "plugins": [
    "react"
  ],

  "extends": [
    "../../.eslintrc",
    "plugin:react/recommended"
  ],

  "globals": {
    "$": true,
    "__dirname": true,
    "Gauge": true
  },

  "rules": {
    // Don't enforce let/const for browser.
    "no-var": 0,
    // Enforce function X() {} so we have react display name.
    "func-style": ["error", "declaration"],
    // Don't require props declaration.
    "react/prop-types": 0
  }
}
